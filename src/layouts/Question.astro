---
import MainI18n from "@components/MainI18n.astro";
import { getQuestionPath } from "@src/utilities/getQuestionPath";
import { headerMenu } from "@src/header";
import { uiStrings } from "@i18n/uiStrings";

const frontmatter = Astro.props,
  { title, pubDate, updatedDate, tags, prev_question, next_question } =
    Astro.props,
  realTags: string[] = tags.filter((tag: any) => {
    return tag !== "other";
  });
---

<MainI18n {frontmatter} collection="faq">
  <article>
    <slot />
  </article>
  <div class="bottom-12 flex h-fit border-t-4 gap-1 w-full absolute bg-black dark:bg-white text-black dark:text-white">
    <a
      class="w-1/2 h-fill px-6 md:!px-10 py-2 lg:py-4 bg-white dark:bg-black"
      href={getQuestionPath(Astro.currentLocale, "faq", prev_question.slug)}
    >
      <h4 class="md:hidden inline-block">←</h4>
      <h4 class="hidden md:inline-block">{prev_question.data.title}</h4></a
    >
    <a
      class="w-1/2 px-6 md:!px-10 py-2 lg:py-4 bg-white dark:bg-black h-fill"
      href={getQuestionPath(Astro.currentLocale, "faq", next_question.slug)}
    >
      <h4 class="md:hidden inline-block float-right">→</h4>
      <h4 class="hidden md:inline-block">{next_question.data.title}</h4></a
    >
  </div>
</MainI18n>
